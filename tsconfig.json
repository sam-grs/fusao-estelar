{
    "compilerOptions": {
        "target": "es6",
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        // "moduleResolution": "bundler",
        "moduleResolution": "Node", // mais est√°vel com a vercel
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [{ "name": "next" }],
        "baseUrl": "src",
        "paths": {
            "app/*": ["app/*"],
            "components/*": ["components/*"],
            "features/*": ["features/*"],
            "lib/*": ["lib/*"],
            "providers/*": ["providers/*"],
            "styles/*": ["styles/*"],
            // "props/*": ["props/*"],
            "routes/*": ["routes/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".eslint.config.mjs", "jest.config.js"],
    "exclude": ["node_modules"]
}
