{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [{ "name": "next" }],
        "baseUrl": "src",
        "paths": {
            "app/*": ["app/*"],
            "components/*": ["components/*"],
            "features/*": ["features/*"],
            "lib/*": ["lib/*"],
            "providers/*": ["providers/*"]
            // "styles/*": ["styles/*"],
            // "props/*": ["props/*"],
            // "routes/*": ["routes/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".eslintrc.js", "jest.config.js"],
    "exclude": ["node_modules"]
}
